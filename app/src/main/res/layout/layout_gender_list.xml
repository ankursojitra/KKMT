<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_48dp"
            android:layout_marginRight="@dimen/_48dp"
            app:cardCornerRadius="@dimen/_8dp"
            app:cardElevation="@dimen/_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:padding="@dimen/_8dp">


                <TextView
                    android:id="@+id/txt_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:padding="@dimen/_8dp"
                    android:text="Gender"
                    android:textAlignment="center"
                    android:textColor="@color/appcolor"
                    android:textSize="@dimen/_14dp"
                    app:layout_constraintBottom_toTopOf="@+id/txt_male"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />


                <ImageView
                    android:id="@+id/img_male"
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp"
                    android:padding="@dimen/_6dp"
                    android:src="@drawable/ic_check"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_male"
                    app:layout_constraintEnd_toStartOf="@+id/txt_male"
                    app:layout_constraintTop_toTopOf="@+id/txt_male" />

                <TextView
                    android:id="@+id/txt_male"
                    android:layout_width="@dimen/_80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2dp"
                    android:gravity="center"
                    android:padding="@dimen/_8dp"
                    android:text="Male"
                    android:textColor="@color/blue_darklight"
                    android:textSize="@dimen/_12dp"
                    app:layout_constraintBottom_toTopOf="@+id/txt_female"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_gender" />


                <ImageView
                    android:id="@+id/img_female"
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp"
                    android:padding="@dimen/_6dp"
                    android:src="@drawable/ic_check"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_female"
                    app:layout_constraintEnd_toStartOf="@+id/txt_female"
                    app:layout_constraintTop_toTopOf="@+id/txt_female" />

                <TextView
                    android:id="@+id/txt_female"
                    android:layout_width="@dimen/_80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_8dp"
                    android:text="Female"
                    android:textColor="@color/blue_darklight"
                    android:textSize="@dimen/_12dp"
                    app:layout_constraintBottom_toTopOf="@+id/txt_other"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_male" />


                <ImageView
                    android:id="@+id/img_other"
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp"
                    android:padding="@dimen/_6dp"
                    android:src="@drawable/ic_check"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_other"
                    app:layout_constraintEnd_toStartOf="@+id/txt_other"
                    app:layout_constraintTop_toTopOf="@+id/txt_other" />

                <TextView
                    android:id="@+id/txt_other"
                    android:layout_width="@dimen/_80dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="center"
                    android:padding="@dimen/_8dp"
                    android:text="Other"
                    android:textColor="@color/blue_darklight"
                    android:textSize="@dimen/_12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_female" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:background="@color/blue_darklight"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_gender" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
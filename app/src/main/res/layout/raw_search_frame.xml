<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/id_frameconstraint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4dp"
            android:background="@drawable/search_back_blue"
            android:paddingLeft="@dimen/_5dp"
            android:paddingTop="@dimen/_5dp"
            android:paddingRight="@dimen/_5dp"
            android:paddingBottom="@dimen/_6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="@dimen/_110dp"
                android:layout_height="@dimen/_60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/backimage"
                app:layout_constraintBottom_toTopOf="@+id/txt_search_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/txt_search_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4dp"
                android:fontFamily="@font/lato_bold"
                android:padding="@dimen/_1dp"
                android:text="Conrad Place Chicago"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_9dp"
                app:layout_constraintBottom_toTopOf="@+id/txt_search_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_search" />

            <TextView
                android:id="@+id/txt_search_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_medium"
                android:lineSpacingExtra="@dimen/_3dp"
                android:maxLines="2"
                android:minLines="2"
                android:padding="@dimen/_1dp"
                android:text="963 Madison drive Suite \n679"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_search_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/id_frameconstraint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4dp"
            android:background="@drawable/notify_fram_back"
            android:padding="@dimen/_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout24"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:background="@drawable/notify_icon_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_notify"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:padding="@dimen/_10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_verified"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/txt_notify_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4dp"
                android:fontFamily="@font/lato_medium"
                android:maxLines="2"
                android:minLines="2"
                android:paddingLeft="@dimen/_4dp"
                android:text="Your Profile Picture Change has been Approved."
                android:textColor="@color/blue_darklight"
                android:textSize="@dimen/_10dp"
                app:layout_constraintBottom_toBottomOf="@+id/constraintLayout24"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/constraintLayout24"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout24" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cnt_amt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_notify_title">


                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="@dimen/_15dp"
                    android:layout_height="@dimen/_15dp"
                    android:layout_marginRight="@dimen/_4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_card" />

                <TextView
                    android:id="@+id/txt_notify_amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_6dp"
                    android:fontFamily="@font/lato_heavy"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_1dp"
                    android:singleLine="true"
                    android:text="1000"
                    android:textColor="@color/blue_darklight"
                    android:textSize="@dimen/_10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/imageView17"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>